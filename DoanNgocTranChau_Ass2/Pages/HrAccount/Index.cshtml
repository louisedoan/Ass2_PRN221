@page
@model DoanNgocTranChau_Ass2.Pages.HrAccount.IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Hraccount[0].Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hraccount[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hraccount[0].MemberRole)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Hraccount) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberRole)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Email">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Email">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Email">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
